int countPrimes(int n) {
    
    if (n < 3) {
        return 0;
    }
    
    vector<bool> is_prime(n, true);
    
    is_prime[0] = false;
    is_prime[1] = false;
    
    int count = 0;
    
    for (int i = 2; i < n; i++) {
        if (is_prime[i]) {
            count++;
            
            for (int j = i; j < n; j += i) {
                is_prime[j] = false;
            }
        }
    }
    
    return count;
}