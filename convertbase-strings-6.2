string convertToBase7(int num) {
    
    if (num == 0) {
        return "0";
    }
    
    string s = "";
    bool isNeg = false;
    if (num < 0) {
        isNeg = true;
        num *= -1;
    }
    
    while (num != 0) {
        s += to_string(num % 7);
        num /= 7;
    }
    
    reverse(s.begin(), s.end());
    
    if (isNeg) {
        s = '-' + s;
    }
    
    return s;
}