pair<int, int> FindMinMax(const vector<int>& A) {

	if (A.size() <= 1) {
		return {A.front(), A.front()};
	}

	int min = INT_MAX;
	int max = INT_MIN;

	for (int i = 0; i  < A.size(); i += 2) {
		if (A[i] < A[i + 1]) {
			if (A[i] < min) {
				min = A[i];
			}

			if (A[i + 1] > max) {
				max = A[i + 1];
			}
		} else {
			if (A[i] > max) {
				max = A[i];
			}

			if (A[i + 1] < min) {
				min = A[i + 1];
			}
		}
	}

	if (A.size() % 2 != 0) {
		if (A[A.size() - 1] < min) {
			min = A[A.size() - 1];
		}

		if (A[A.size() - 1] > max) {
			max = A[A.size() - 1];
		}
	}

	return {min, max};
}