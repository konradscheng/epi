bool IsPalindrome(string& s) {
	int i = 0;
	int j = s.size() - 1;
	while (i < j) {
		while (!((s[i] > 'a' && s[i] < 'z') || (s[i] > 'A' && s[i] < 'Z')) && i < j) {
			i++;
		}

		while (!((s[j] > 'a' && s[j] < 'z') || (s[j] > 'A' && s[j] < 'Z')) && i < j) {
			j--;
		}

		if (s[i] != s[j]) {
			return false;
		}

		i++;
		j--;
	}

	return true;
}