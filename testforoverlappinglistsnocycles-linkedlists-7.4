ListNode* OverlappingNoCycleLists(ListNode* L1, ListNode* L2) {
	ListNode temp = L1;
	int L1length = 0;
	int L2length = 0;

	while (temp != nullptr) {
		L1length++;
		temp = temp->next;
	}

	temp = L2;

	while (temp != nullptr) {
		L2length++;
		temp = temp->next;
	}

	if (L1length < L2length) {
		for (int i = 0; i < (L2length - L1length); i++) {
			L1 = L1->next;
		}
	} else {
		for (int i = 0; i < (L1length - L2length); i++) {
			L2 = L2->next;
		}	
	}

	while (L1 && L2 && L1->val != L2->val) {
		L1 = L1->next;
		L2 = L2->next;
	}

	return L1;
}