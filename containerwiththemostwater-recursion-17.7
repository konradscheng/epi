int helper(vector<int>& height, int start, int end, int max) {
    
    if (start > end) {
        return max;
    }
    
    if ((end - start) * min(height[start], height[end]) > max) {
        max = (end - start) * min(height[start], height[end]);
    }
    
    if (height[start] < height[end]) {
        return helper(height, start + 1, end, max);
    } 
    
    return helper(height, start, end - 1, max);
}

int maxArea(vector<int>& height) {
    return helper(height, 0, height.size() - 1, INT_MIN);
    }